rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users: allow users to read their own record; admins can read/write
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin','super_admin']);
      allow write: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin','super_admin']);
    }

    // foodSchedules: staff/admin/super_admin can read; only admin/super_admin can write
    match /foodSchedules/{scheduleId} {
      allow read: if request.auth != null && (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['staff','admin','super_admin']);
      allow create: if request.auth != null && (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin','super_admin']);
      allow update, delete: if request.auth != null && (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin','super_admin']);
    }

    // distributionCenters: anyone authenticated can read; only admin/super_admin can write
    match /distributionCenters/{centerId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin','super_admin']);
    }

    // beneficiaries: readable by staff/admin/super_admin; staff allowed to create (read/create), updates/deletes restricted to admin/super_admin
    match /beneficiaries/{benId} {
      allow read: if request.auth != null && (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['staff','admin','super_admin']);
      // allow create for staff/admin/super_admin, but restrict update/delete to admin/super_admin
      allow create: if request.auth != null && (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['staff','admin','super_admin']);
      allow update, delete: if request.auth != null && (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin','super_admin']);
    }

    // default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}